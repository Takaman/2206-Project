{
  "manifest_version": 3,
  "name": "Fact Checker",
  "version": "1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Fact Checker",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://127.0.0.1:8000/",
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "https://factchecktools.googleapis.com/*",
    "https://newsapi.org/v2/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}